@model R61M9C10_W01.ViewModels.PROFILEVM
@Html.ValidationSummary()
<form method="post" asp-action="EditProfile" asp-controller="Profile" enctype="multipart/form-data">

    <div class="form-group">
        <input type="hidden" class="form-control" id="name" asp-for="Userid">
        <input type="hidden" class="form-control" id="name" asp-for="Email">
        <label for="name">Full Name</label>

        <input type="text" class="form-control" asp-for="Fullname" id="name" aria-describedby="emailHelp" placeholder="Enter Full name">
        
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" id="PhoneNumber" aria-describedby="emailHelp" placeholder="Enter Phone number">
    </div>
    <div class="form-group form-check">
        
        <label class="control-label" for="ProfilePic">Picture</label>
        <input type="file"  id="ProfilePic" name="ProfilePic" accept="images/*">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>